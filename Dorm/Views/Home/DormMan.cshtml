<script>
    window.onload = function () {
        $("#node6").addClass("active-menu");      
        axios.all([
            AxiosGet("/DormMan/GetTool", null, donrminfo),
            AxiosGet("/DormMan/GetListNotice", null, getlist)
        ]).then(axios.spread(function (acct, perms) {
            console.log("加载完毕!");
  }));
    }
    function donrminfo(data) {
        $("#Broom_Max").val(data.Broom_Max);
        $("#Broom").val(data.Broom);
        $("#Mop_Max").val(data.Mop_Max);
        $("#Mop").val(data.Mop);
        $("#Trash_Max").val(data.Trash_Max);
        $("#Trash").val(data.Trash);
        $("#Water_Max").val(data.Water_Max);
        $("#Water").val(data.Water);

        var ctx2 = document.getElementById("myChart2").getContext("2d");
        var ctx3 = document.getElementById("myChart3").getContext("2d");
        var ctx4 = document.getElementById("myChart4").getContext("2d");
        var ctx5 = document.getElementById("myChart5").getContext("2d");

        var doughnutData1 = {
            labels: [
                "剩余",
                "使用"
            ],
            datasets: [
                {
                    data: [(data.Broom_Max - data.Broom),data.Broom],
                    backgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ],
                    hoverBackgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ]
                }]
        };
        var DoughnutChart = new Chart(ctx2, {
            type: 'doughnut',
            data: doughnutData1,
            responsive: true
        });

        var doughnutData2 = {
            labels: [
                "剩余",
                "使用"
            ],
            datasets: [
                {
                    data: [ (data.Mop_Max - data.Mop),data.Mop],
                    backgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ],
                    hoverBackgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ]
                }]
        };
        var DoughnutChart = new Chart(ctx3, {
            type: 'doughnut',
            data: doughnutData2,
            responsive: true
        });

        var doughnutData3 = {
            labels: [
                "剩余",
                "使用"
            ],
            datasets: [
                {
                    data: [(data.Trash_Max - data.Trash),data.Trash],
                    backgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ],
                    hoverBackgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ]
                }]
        };
        var DoughnutChart = new Chart(ctx4, {
            type: 'doughnut',
            data: doughnutData3,
            responsive: true
        });

        var doughnutData4 = {
            labels: [
                "剩余",
                "使用"
            ],
            datasets: [
                {
                    data: [(data.Water_Max - data.Water),data.Water],
                    backgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ],
                    hoverBackgroundColor: [
                        "#FF6384",
                        "#36A2EB"
                    ]
                }]
        };
        var DoughnutChart = new Chart(ctx5, {
            type: 'doughnut',
            data: doughnutData4,
            responsive: true
        });

    }
    function AddTool() {
        var Broom = parseInt($("#Broom").val(),10);
        var Broom_Max = parseInt($("#Broom_Max").val(),10);
        var Mop = parseInt($("#Mop").val(),10);
        var Mop_Max = parseInt($("#Mop_Max").val(),10);
        var Trash = parseInt($("#Trash").val(),10);
        var Trash_Max = parseInt($("#Trash_Max").val(),10);
        var Water = parseInt($("#Water").val(),10);
        var Water_Max =parseInt( $("#Water_Max").val(),10);
        console.log("Trash:" + Trash + "-----Trash_Max:" + Trash_Max);
        var obj = new Object();
        if (Broom <= Broom_Max && Mop <= Mop_Max && Trash <= Trash_Max && Water <= Water_Max) {
            obj.Broom = Broom;
            obj.Broom_Max = Broom_Max;
            obj.Mop = Mop;
            obj.Mop_Max = Mop_Max;
            obj.Trash = Trash;
            obj.Trash_Max = Trash_Max;
            obj.Water = Water;
            obj.Water_Max = Water_Max;
            console.log(obj);
            AxiosPost("/DormMan/AddTool", obj, addTooltip);
        } else {
            $("#tipno").fadeIn("slow");
            setTimeout(function () { ($('#tipno').fadeOut()); }, 1500);
        }


    }
    function addTooltip(data) {
        AxiosGet("/DormMan/GetTool", null, donrminfo);
        if (data.message == 1) {
            $("#tipok").fadeIn("slow");
            setTimeout(function () { $('#tipok').fadeOut(); }, 1500);
        } else {
            $("#tipno").fadeIn("slow");
            setTimeout(function () { ($('#tipno').fadeOut()); }, 1500);
        }
    }
    function AddNotice() {
        var Notice = $("#Notice").val();
        var Title = $("#Title").val();
        var Name = $("#Name").val();
        if (Name == "" && Title != "" && Notice != "") {
            Name = "管理员";
            var obj = new Object();
            obj.Notice = Notice;
            obj.Title = Title;
            obj.Name = Name;
            AxiosPost("/DormMan/AddNotice", obj, addNoticetip);
        } else {
            $("#tipno").fadeIn("slow");
            setTimeout(function () { ($('#tipno').fadeOut()); }, 1500);
        }
        
        
    }
    function addNoticetip(data) {
        if (data.message == 1) {
            $("#tipok").fadeIn("slow");
            setTimeout(function () { $('#tipok').fadeOut(); }, 1500);
        } else {
            $("#tipno").fadeIn("slow");
            setTimeout(function () { ($('#tipno').fadeOut()); }, 1500);
        }
        AxiosGet("/DormMan/GetListNotice", null, getlist);
    }
    function getlist(data)
    {
        $("#Noticeinfo").empty();
        $("#Title").val("");
        $("#Notice").val("");
        $("#Name").val("");
        if (data =="") {
                        $("#Noticeinfo").append(
                `
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="col-lg-6"><h3 class="panel-title">公告：无此类公告</div> <div style="text-align:right">作者:无此类公告</div></h3>
                    </div>
                    <div class="panel-body">无此类公告
                    </div>
                </div>`
            )
        } else {
                      $.each(data, function (i, item) {
            $("#Noticeinfo").append(
                `
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="col-lg-6"><h3 class="panel-title">公告：${item.Title}</div> <div style="text-align:right">时间:${item.DateTime}</div></h3>
                    </div>
                    <div class="panel-body">${item.Notice}
                    </div>
                </div>`
            )
        })
        }

        }
    function search() {
        var Title = $("#Search").val();//标题
        if (Title != "") {
            var obj = new Object();
            obj.Title = Title;
            AxiosPost("/DormMan/SearchTool", obj, getlist);
        } else {
            AxiosGet("/DormMan/GetListNotice", null, getlist);
        }
    }
    function Reset() {
        $("#Title").val("");
        $("#Notice").val("");
        $("#Broom").val("0");
        $("#Mop").val("0");
        $("#Trash").val("0");
        $("#Water").val("0");
    }
</script>